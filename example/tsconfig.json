{
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": "../",
        "sourceRoot": "./example",
        "sourceMap": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom"
        ],
        "noImplicitReturns": true,
        "downlevelIteration": true,
        "noEmit": true,
        "noImplicitAny": true,
        "paths": {
            "cg-webworker/*": ["./dist/*"],
        },
        "allowUnreachableCode": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "types/*.ts"
    ],
    "excludeDirectories": [
        "**/node_modules",
        "../dist"
    ],
}
