{
    "compilerOptions": {
        "baseUrl": "./",

        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "allowJs": false,
        "lib": [
            "dom",
            "ESNext"
        ],
        "noImplicitReturns": true,
        "downlevelIteration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "../../dist/legacy",

        "allowUnreachableCode": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "paths": {
            "cg-webworker/core": ["../../dist/core"],
            "cg-webworker/datastore": ["../../dist/datastore"],
        }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ]
}
